<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
     >


<ScrollView
    android:layout_height="0dp"
    android:layout_weight="1"
    android:layout_width="match_parent">


<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollIndicators="top|bottom"
    android:orientation="vertical"
    tools:context=".Filter">

    <LinearLayout
        android:id="@+id/f1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titleF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="Select filter to filter out search results."
            android:textColor="#000"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/f2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/f1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/subT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#E6E2E2"
            android:padding="10dp"
            android:text="Filter with mood"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radG">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radB2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:layout_weight="9"
                    android:text="Sad - Tea"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/sad1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:onClick="onClickB"
                    android:background="@drawable/info"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="5dp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radB10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:layout_weight="9"
                    android:text="Sad - Rice"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/sad2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:onClick="onClickB"
                    android:background="@drawable/info"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radB3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:layout_weight="9"
                    android:text="Angry - Salad"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/ang1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:onClick="onClickB"
                    android:background="@drawable/info"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radB11"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:layout_weight="9"
                    android:text="Angry - Ice cream"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/ang2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:onClick="onClickB"
                    android:background="@drawable/info"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="5dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/subT2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#E6E2E2"
                android:padding="10dp"
                android:text="Filter with restaurant type"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radB4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Chinese Food"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/radB5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Malay Food"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/radB6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Indian Food"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/radB7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Western Food"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/radB8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Thai Food"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/radB9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Fast Food"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/radB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Bbq"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/radB12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Steamboat"
                android:textSize="18sp" />
        </RadioGroup>

    </LinearLayout>
</LinearLayout>

</ScrollView>

    <LinearLayout
        android:id="@+id/f3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonF"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:onClick="searchF"
            android:text="Search" />
    </LinearLayout>
</LinearLayout>